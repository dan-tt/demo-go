# =============================================================================
# Demo Go Application - Environment Variables Template
# =============================================================================
# Copy this file to .env and update the values for your environment
# DO NOT commit .env file to version control

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=demo-clean-api
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
APP_DEBUG=true

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# =============================================================================
# Database Configuration
# =============================================================================
# Repository type: mongodb, memory
REPOSITORY_TYPE=mongodb

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=demo_clean
MONGODB_TIMEOUT=10s
MONGODB_MAX_POOL_SIZE=100
MONGODB_MAX_IDLE_TIME=30s

# MongoDB Credentials (Change these in production!)
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password

# =============================================================================
# Cache Configuration
# =============================================================================
# Cache type: redis, memory
CACHE_TYPE=memory
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION=24h
JWT_ISSUER=demo-clean-api

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# =============================================================================
# External Services
# =============================================================================
# GraphQL Configuration
GRAPHQL_PLAYGROUND_ENABLED=true
GRAPHQL_INTROSPECTION_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s

# =============================================================================
# Development Tools (Database UI)
# =============================================================================
# Mongo Express Configuration (for development only)
MONGO_EXPRESS_ENABLE=true
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin

# =============================================================================
# Testing Configuration
# =============================================================================
TEST_API_BASE_URL=http://localhost:8080
TEST_TIMEOUT=30s
